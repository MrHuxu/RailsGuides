<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>=============================</p>

<%= render @products %>
<%= render partial: @products, spacer_template: 'product_ruler' %>

<%= render partial: 'sample', layout: 'box', locals: { product: @product } %>

<p>=============================</p>

<%= content_tag_for(:tr, @product, class: 'frontpage') do %>
  <td><%= @product.name %></td>
<% end %>
<p>=============================</p>
<%= div_for(@product, class: "frontpage") do %>
  <td><%= @product.name %></td>
<% end %>

<p>=============================</p>

<%= render partial: 'collection' %>
<%= @greeting %>

<p>=============================</p>

<%= yield :special_script %>

<p>=============================</p>

<%= date_select('product', 'updated_at') %>

<%= link_to 'New Product', new_product_path %>
